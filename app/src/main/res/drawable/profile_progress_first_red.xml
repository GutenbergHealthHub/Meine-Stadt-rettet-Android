<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="10dp"
        android:left="8dp"
        android:right="8dp">
        <shape android:shape="rectangle">
            <solid
                android:width="1dp"
                android:color="@color/colorDarkGrey" />
        </shape>
    </item>
    <item
        android:top="10dp"
        android:bottom="40dp"
        android:left="1dp">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/colorRed"/>
            <corners
                android:radius="2dp"/>
            <size
                android:width="16dp"
                android:height="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/colorDarkGrey" />
        </shape>
    </item>

</layer-list>
